<script>
  function styleNavbar(...array) {
    for (const el of array) {
      if (document.location.pathname.startsWith(el)) {
        document
          .querySelector(`.nav-link[href="${el}"]`)
          .classList.remove('text-secondary')
        document.querySelector(`.nav-link[href="${el}"]`).style.color = 'white'
        break
      }
    }
  }

  styleNavbar(
    '/statistic/applicants/',
    '/analitics/applicants/',
    '/rating/spo/',
    '/rating/bak/',
    '/rating/mag/',
    '/rating/spec/',
    '/rating/ord/',
    '/rating/asp/',
    '/'
  )
</script>
