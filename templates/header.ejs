<header class="p-3 bg-dark text-white">
  <div class="container">
    <div
      class="
        d-flex
        flex-wrap
        align-items-center
        justify-content-center justify-content-lg-start
      "
    >
      <ul
        class="
          nav
          col-12 col-lg-auto
          me-lg-auto
          mb-2
          justify-content-center
          mb-md-0
        "
      >
        <li>
          <div class="btn-group">
            <a href="/" class="btn btn-dark">
              Пофамильные списки лиц, подавших документы в БФУ им. И. Канта
            </a>
            <button
              type="button"
              class="btn btn-dark dropdown-toggle dropdown-toggle-split"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-dark bg-dark">
              <li>
                <a
                  class="dropdown-item nav-link px-2 text-secondary"
                  href="/statistic/applicants/"
                  >Статистика</a
                >
              </li>
              <li>
                <a
                  class="dropdown-item nav-link px-2 text-secondary"
                  href="/analitics/applicants/"
                  >Анализ</a
                >
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  if (document.location.pathname.startsWith('/statistic/applicants/')) {
    document
      .querySelector('.nav-link[href="/statistic/applicants/"]')
      .classList.remove('text-secondary')
    document.querySelector(
      '.nav-link[href="/statistic/applicants/"]'
    ).style.color = 'white'
  } else if (document.location.pathname.startsWith('/analitics/applicants/')) {
    document
      .querySelector('.nav-link[href="/analitics/applicants/"]')
      .classList.remove('text-secondary')
    document.querySelector(
      '.nav-link[href="/analitics/applicants/"]'
    ).style.color = 'white'
  } else {
    document
      .querySelectorAll('.nav-link[href="/"]')
      .forEach(el => el.classList.remove('text-secondary'))
    document
      .querySelectorAll('.nav-link[href="/"]')
      .forEach(el => (el.style.color = 'white'))
  }
</script>
