<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <style>
      [v-cloak] {
        display: none;
      }
    </style>
    <title>Статистика</title>
  </head>
  <body>
    <%-include('../header.ejs') %>
    <div class="container">
      <div id="app" v-cloak>
        <input
          type="text"
          class="form-control m-2"
          placeholder="Фильтр по квоте"
          v-model="napravlenieForm"
        />
        <input
          type="text"
          class="form-control m-2"
          placeholder="Фильтр по направлению"
          v-model="osnovanieForm"
        />
        <input
          type="text"
          class="form-control m-2"
          placeholder="Фильтр по времени"
          v-model="timeForm"
        />
        <input
          type="number"
          class="form-control m-2"
          placeholder="Фильтр по количеству наград"
          v-model="prizeForm"
        />
        <button class="btn btn-success m-2" @click="clickHandler">
          Фильтровать
        </button>
        <button class="btn btn-danger m-2" @click="resetFilters">
          Сбросить фильтры
        </button>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Фио</th>
              <th scope="col">Дата подачи</th>
              <th scope="col">Кол. наград</th>
              <th scope="col">Уровень образования</th>
              <th scope="col">Направление</th>
            </tr>
          </thead>
          <tbody>
            <tr v-for="(el, idx) of list">
              <th scope="row">{{ idx + 1 }}</th>
              <td>
                <a :href="idx">{{ el.FIO }}</a>
              </td>
              <td>{{new Date(el.DPZ).toLocaleDateString()}}</td>
              <td>{{ el.IDs.length }}</td>
              <td>{{ el.Napravlenie }}</td>
              <td>{{ el.Osnovanie }}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script>
      new Vue({
        el: '#app',

        data: {
          list: [],
          napravlenieForm: '',
          osnovanieForm: '',
          timeForm: '',
          prizeForm: '',
        },

        async mounted() {
          const resp = await fetch(
            window.location.origin + '/api/applicants/get/'
          )
          const data = await resp.json()
          this.list = data
        },

        methods: {
          async clickHandler() {
            const resp = await fetch(
              window.location.origin + '/api/applicants/get/'
            )
            const data = await resp.json()
            this.list = data

            if (this.osnovanieForm) {
              this.list = this.list.filter(
                el => el.Osnovanie === this.osnovanieForm
              )
            }
            if (this.napravlenieForm) {
              this.list = this.list.filter(
                el => el.Napravlenie === this.napravlenieForm
              )
            }
            if (this.timeForm) {
              this.list = this.list.filter(
                el => new Date(el.DPZ).toLocaleDateString() === this.timeForm
              )
            }
            if (this.prizeForm) {
              this.list = this.list.filter(el => {
                return el.IDs.length === parseInt(this.prizeForm)
              })
            }
          },

          async resetFilters() {
            const resp = await fetch(
              window.location.origin + '/api/applicants/get/'
            )
            const data = await resp.json()

            this.napravlenieForm = ''
            this.osnovanieForm = ''
            this.timeForm = ''
            this.prizeForm = null

            this.list = data
          },
        },
      })
    </script>
  </body>
</html>
